<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dp_10">


    <com.xuanluo.lkaleidoscope.view.LKaleidoImageView
        android:id="@+id/item_gallery_iv_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:weight_ratio_iv="1.3"
        android:background="?attr/Lkaleido_two_color"/>

    <View
        android:id="@+id/item_gallery_v_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sel_image"/>

</FrameLayout>
